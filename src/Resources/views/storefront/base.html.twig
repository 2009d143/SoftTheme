{% sw_extends '@Storefront/storefront/base.html.twig' %}


 {% block base_navigation %}
    
    <div id="preloader">
        <div id="preloadertext">
            <picture>
                {% block layout_header_logo_image_tablet %}
                    {% if shopware.theme['sw-logo-tablet'] %}
                        <source srcset="{{ shopware.theme['sw-logo-tablet'] |sw_encode_url }}"
                                media="(min-width: {{ shopware.theme.breakpoint.md }}px) and (max-width: {{ shopware.theme.breakpoint.lg - 1 }}px)">
                    {% endif %}
                {% endblock %}

                {% block layout_header_logo_image_mobile %}
                    {% if shopware.theme['sw-logo-mobile'] %}
                        <source srcset="{{ shopware.theme['sw-logo-mobile'] |sw_encode_url }}"
                                media="(max-width: {{ shopware.theme.breakpoint.md - 1 }}px)">
                    {% endif %}
                {% endblock %}

                {% block layout_header_logo_image_default %}
                    {% if shopware.theme['sw-logo-desktop'] %}
                        <img src="{{ shopware.theme['sw-logo-desktop'] |sw_encode_url }}"
                             alt="{{ "header.logoLink"|trans|striptags }}"
                             class="img-fluid header-logo-main-img"/>
                    {% endif %}
                {% endblock %}
            </picture>
            <p>{{ "soft-theme.title.preLoadingText"|trans }} <span class="preloader_dot">.</span> <span class="preloader_dot">.</span> <span class="preloader_dot">.</span> </p>
        </div>
    </div>
    
    <div class="nav-main" id="bcnavmenu">
        {% block base_navigation_inner %}
            {% sw_include '@Storefront/storefront/layout/navigation/navigation.html.twig' %}
        {% endblock %}
    </div>
  {% endblock %}



{% block base_footer %}
    <footer class="footer-main">
        {% block base_footer_inner %}
            {% sw_include '@Storefront/storefront/layout/footer/footer.html.twig' %}           
        {% endblock %}
    </footer>
{% endblock %}
